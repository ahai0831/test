<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <LibpngPath>$(ProjectDir)..\..\..\..\third_party\libpng\libpng-1.6.37\</LibpngPath>
    <LibpngIncludePath>$(LibpngPath)include\</LibpngIncludePath>
  </PropertyGroup>
  <PropertyGroup />
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(LibpngIncludePath);%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
   </ClCompile>
    <Link>
      <AdditionalDependencies>$(LibpngPath)lib\$(Platform)\$(Configuration)\png.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="LibpngPath">
      <Value>$(LibpngPath)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
    <BuildMacro Include="LibpngIncludePath">
      <Value>$(LibpngIncludePath)</Value>
      <EnvironmentVariable>true</EnvironmentVariable>
    </BuildMacro>
  </ItemGroup>
</Project>